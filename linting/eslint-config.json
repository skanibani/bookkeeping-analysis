{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "node_modules/",
        "database/data/",
        "lib/public/assets/",
        "cpp-api-client/"
    ],
    "plugins": [
        "bookkeeping-metrics",
        "lcom"
    ],
    "rules": {
        "lcom/lcom4": "warn"
    }
}